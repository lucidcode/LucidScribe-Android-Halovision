<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lucidcode.LucidScribe.HaloVision"
    android:versionCode="12"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <permission android:name="net.dinglisch.android.tasker.PERMISSION_RUN_TASKS" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="net.dinglisch.android.tasker.PERMISSION_RUN_TASKS" />

    <application
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:testOnly="true" >
        <activity
            android:name="lucidcode.LucidScribe.HaloVision.MotionMonitor"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale"
            android:label="Halovision" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lucidcode.LucidScribe.HaloVision.VisionActivity"
            android:label="Halovision"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="lucidcode.LucidScribe.HaloVision.VisionActivitySmall"
            android:label="Halovision"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="lucidcode.LucidScribe.HaloVision.LucidScribeStoreActivity"
            android:label="Lucid Scribe - Halovision"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent" >
        </activity>
    </application>

</manifest>